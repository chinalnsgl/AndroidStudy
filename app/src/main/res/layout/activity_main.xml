<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.study.sgl.androidstudy.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.study.sgl.tools.ui.TopBar
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="@string/index"
            app:titleColor="@color/colorPrimary"/>

        <Button
            android:layout_below="@id/topBar"
            android:id="@+id/startOtherActivity"
            style="@style/button_main"
            android:text="@string/StartOtherActivity"/>

        <Button
            android:id="@+id/startOtherActivity2"
            style="@style/button_main"
            android:layout_below="@id/startOtherActivity"
            android:text="@string/StartOtherActivity2"/>

        <Button
            android:id="@+id/startOtherActivity3"
            style="@style/button_main"
            android:layout_below="@id/startOtherActivity2"
            android:text="@string/StartOtherActivity3"/>

        <Button
            android:id="@+id/list"
            style="@style/button_main"
            android:layout_below="@id/startOtherActivity3"
            android:text="@string/list"/>

        <Button
            android:id="@+id/List2"
            style="@style/button_main"
            android:layout_below="@id/list"
            android:text="@string/list2"/>

        <Button
            android:id="@+id/popMenu"
            style="@style/button_main"
            android:layout_below="@id/List2"
            android:text="@string/popMenu"/>

        <Button
            android:id="@+id/popWindow"
            style="@style/button_main"
            android:layout_below="@id/popMenu"
            android:text="@string/popWindow"/>

        <Button
            android:id="@+id/fragmentExample"
            style="@style/button_main"
            android:layout_below="@id/popWindow"
            android:text="@string/fragment_example"/>

        <Button
            android:id="@+id/filePersistence"
            style="@style/button_main"
            android:layout_below="@id/fragmentExample"
            android:text="@string/filePersistence"/>

        <Button
            android:id="@+id/animation"
            style="@style/button_main"
            android:layout_below="@id/filePersistence"
            android:text="@string/animation"/>

        <Button
            android:id="@+id/navigation"
            style="@style/button_main"
            android:layout_below="@id/animation"
            android:text="导肮"/>

    </RelativeLayout>
</ScrollView>